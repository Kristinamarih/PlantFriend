<!DOCTYPE html>
<html>
  <head>
    <title>PlantFriend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="container">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "PlantFriend", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li><%= link_to "Logout", logout_path, method: "delete" %></li>
            <li><%= link_to "Profile", user_path(current_user.id) %></li>
            <li><%= link_to "Add product", new_product_path %></li>
            <li><%= link_to "All products", products_path %></li>
            <li><%= link_to "Messages", conversations_path(current_user.id) %></li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    
      <% if flash[:message] %>
        <%= flash[:message] %>
      <% end %>
    
    <%= yield %>
  </body>
</html>
