<div class="container">
    <div class="col-12 text-center">
        <div class="row">
            <ul class="list-group">
                <h1>Messages</h1>

                <% @conversations.each do |conversation| %>
                    <li class="list-group-item"
                        <p><%= conversation.receiver(current_user).username %></p>
                        <br>
                        <%= link_to 'View conversation', conversation_messages_path(conversation) %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>

                  