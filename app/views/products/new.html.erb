<h1>New Product</h1>

<%= form_for(@product) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    <br>
    <%= f.label :quantity %>
    <%= f.text_field :quantity, placeholder: "pieces, pounds, etc." %>
    <br>
    <%= f.label :price %>
    <%= f.number_field :price, value: to_currency(f.object.price) %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <br><br>

    <%= f.submit("Create", :class => "btn btn-primary") %>

<% end %>