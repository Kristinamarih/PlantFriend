<div class="container">
    <div class="row">
        <div class="col-lg-8">

        <h1>New Product</h1>

        <hr>

        <%= form_for(@product) do |f| %>

            <%= f.label :name %>
            <%= f.text_field :name %>
            <br>
            <%= f.label :category %>
            <%= f.collection_select :category_id, Category.where("id > ?", 2), :id, :name %>
            <br>
            <%= f.label :quantity %>
            <%= f.text_field :quantity, placeholder: "pieces, pounds, etc." %>
            <br>
            <%= f.label :price %>
            <%= f.number_field :price, placeholder: "US dollars", value: to_currency(f.object.price) %>
            <br>
            <%= f.label :description %>
            <%= f.text_area :description %>
            <br>

            <%= f.submit("Create", :class => "btn btn-primary") %>

        <% end %>

        </div>
    </div>
</div>