<h1><%= @product.name %></h1> - <h4><%= link_to @product.category.name, categories_path(@product.category) %></h4>
<h3>Grown by: <%= @product.user.username %></h3>

<div>Quantity: <%= @product.quantity %></div>
<div>Price: <%= @product.price %></div>
<div>Description: <%= @product.description %></div>

<% if @product.user == current_user %>
    <%= link_to "Edit product", edit_product_path(@product) %>
<% end %>

<h4>Comments:</h4>

<p><%= link_to "See all comments", product_comments_path(@product) %></p>
<p><%= link_to "Add a new comment", new_product_comment_path(@product) %></p>

<% @product.comments.each do |c| %>
    <li><strong><%= c.user.username %></strong> says "<%= link_to c.content, product_comments_path(@product, c)%>"</li>
<% end %>

<% if @product.comments.empty? %>
    <p>Be the first to leave a comment!</p>
<% end %>