<div class="container">
    <div class="row">
        <div class="col-lg-8">

        <h1 class="mt-4">Edit <%= @product.name %></h1>

        <%= render partial: "layouts/errors", locals: { object: @product } %>

        <hr>

        <%= form_for(@product) do |f| %>

            <%= f.label "Choose a category" %>
            <%= f.collection_select :category_id, Category.where("id > ?", 2), :id, :name %>
            <br>
            <%= f.label :quantity %>
            <%= f.text_field :quantity %>
            <br>
            <%= f.label :price %>
            <%= f.text_field :price %>
            <br>
            <%= f.label :description %>
            <%= f.text_area :description %>
            <br>

            <%= f.submit("Update", :class => "btn btn-primary") %>
            
        <% end %>
        
        </div>
    </div>
</div>

