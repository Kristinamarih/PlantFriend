<h1>Edit Comment</h1>

<%= render partial: "layouts/errors", locals: { object: @comment } %>

<%= form_for(@comment) do |f| %>

    <%= f.label :product %>
    <%= f.collection_select :product_id, Product.all, :id, :name %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit(:class => "btn btn-primary") %>

<% end %>